@using System.Globalization;

@model List<ClimaTempoSimples.Models.PrevisaoClima>

<h2>Clima para os próximos 7 dias na cidade de @ViewBag.NomeCidade</h2>

<div class="container">
    <div class="row seven-cols">
        @foreach (var previsao in Model)
        {
            <div class="col-sm-2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            @previsao.DataPrevisao.ToString("dddd", new CultureInfo("pt-BR"))
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="row">
                                @{
                                    switch (previsao.Clima)
                                    {
                                        case "instavel":
                                            <span class="fa-solid fa-cloud-sun" aria-hidden="true"></span>
                                            <span>Instável</span>
                                            break;
                                        case "tempestuoso":
                                            <span class="fa-solid fa-cloud-bolt" aria-hidden="true"></span>
                                            <span>Tempestuoso</span>
                                            break;
                                        case "chuvoso":
                                            <span class="fa-solid fa-cloud-showers-heavy" aria-hidden="true"></span>
                                            <span>Chuvoso</span>
                                            break;
                                        case "nublado":
                                            <span class="fa-solid fa-cloud" aria-hidden="true"></span>
                                            <span>Nublado</span>
                                            break;
                                        case "ensolarado":
                                            <span class="fa-solid fa-sun" aria-hidden="true"></span>
                                            <span>Ensolarado</span>
                                            break;

                                    }
                                }
                            </div>
                            <div class="row">
                                Mínima: @((int?)previsao.TemperaturaMinima)°C
                            </div>
                            <div class="row">
                                Máxima: @((int?)previsao.TemperaturaMaxima)°C
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>